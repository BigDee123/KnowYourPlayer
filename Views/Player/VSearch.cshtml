@model IEnumerable<knowYourPlayer.Models.Player>

@{
    ViewBag.Title = "VSearch";
}

<h2>VSearch</h2>
<style>

    body{

        background-color:sandybrown
    }
</style>
<p>
    @Html.ActionLink("Create New", "RegisterPlayer","Player")
</p>

@using (Html.BeginForm("Vsearch", "Player", FormMethod.Get))
{

    @Html.TextBox("search")
    <input type="submit" value="search" />


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.playerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.playerAge)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.playerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.playerAge)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.playerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.playerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.playerID })
                </td>
            </tr>
        }

    </table>



}
